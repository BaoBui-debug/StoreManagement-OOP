<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OOP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OOP.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">OOP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <ul class="nav justify-content-center my-3 hidden">
            <li class="nav-item mx-3">
                <a class="btn btn-sm btn-outline-secondary" id="pr" href="/view?i=pr">Sản Phẩm</a>
            </li>
            <li class="nav-item mx-3">
                <a class="btn btn-sm btn-outline-secondary" id="ct" href="/view?i=ct">Phân Loại</a>
            </li>
            <li class="nav-item mx-3">
                <a class="btn btn-sm btn-outline-secondary position-relative" id="ip" href="/view?i=ip">Hóa Đơn Nhập Hàng</a>
            </li>
            <li class="nav-item mx-3">
                <a class="btn btn-sm btn-outline-secondary" id="iv" href="/view?i=iv">Hóa Đơn Bán Hàng</a>
            </li>
        </ul>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            #creator: BaoBui Debug
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script type="text/javascript">
        function ExpToggle() {
            if (checkbox.checked == true) {
                exp.readOnly = false;
                exp.type = "date";
                exp.required = true;
            }
            else {
                exp.readOnly = true;
                exp.value = null;
                exp.type = "text";
                exp.placeholder = "Không có hạng sử dụng";
            }
        }
    </script>
</body>
</html>