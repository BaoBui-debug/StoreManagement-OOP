@page
@model Presentation.Pages.account.LoginModel

<partial name="_Inform" model="@Model.Message"/>
<h1 class="text-danger">@Model.FeedBack</h1>
<h3 class="text-center">Đăng nhập</h3>
<div class="d-flex justify-content-center">
    <form method="post">
        <div data-mdb-input-init class="form-outline mb-4">
            <label class="form-label">Tên đăng nhập</label>
            <input type="text" class="form-control" name="name"/>
        </div>

        <div data-mdb-input-init class="form-outline mb-4">
            <label class="form-label">Mật khẩu</label>
            <input type="password" class="form-control" name="password" id="pw"/>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" onclick="ToggleVisibility()"/>
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="20" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0" />
                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7" />
                </svg>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" checked />
                    <label class="form-check-label"> Remember me </label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4 col-12">Đăng nhập</button>
    </form>
</div>

<script type="text/javascript">
    var passInput = document.getElementById("pw");
    function ToggleVisibility() {
        if (passInput.type == "password") {
            passInput.type = "text";
        }
        else {
            passInput.type = "password";
        }
    }
</script>