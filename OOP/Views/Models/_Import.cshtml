@using Entity;
@model List<Import>

<table class="table">
    <thead>
        <tr class="text-center">
            <th scope="col">Mã</th>
            <th scope="col">Ngày thêm hóa đơn</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá / đơn vị</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Tổng giá trị</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{
            for (int i = 0; i < Model.Count; i++)
            {
                if(Model[i].Alive)
                {    
                <tr class="text-center">
                    <th scope="row">
                        @Model[i].Id
                    </th>
                    <td>@Model[i].Date</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Price ₫</td>
                    <td>@Model[i].Quantity</td>
                    <td>@Model[i].Total ₫</td>
                    <td>
                        <a href="/import/edit?id=@i" class="btn btn-primary">Sửa</a>        
                        <a href="/import/delete?id=@i" class="btn btn-danger">Xóa</a>
                    </td>
                    </tr>
                }
                else
                {
                <tr class="text-center bg-warning bg-opacity-25">
                    <th scope="row">
                        <span class="badge rounded-pill bg-warning text-dark">đã hết hạn</span>
                    </th>
                    <td>@Model[i].Date</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Price ₫</td>
                    <td>@Model[i].Quantity</td>
                    <td>@Model[i].Total ₫</td>
                    <td>
                        <a href="/import/delete?id=@i" class="btn btn-danger">Xóa</a>
                    </td>
                </tr>
                }
            }
        }
    </tbody>
</table>